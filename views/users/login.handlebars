<body>

{{#if error_msg}}
    <div class="alert alert-danger">
        {{error_msg}}
    </div>
{{else if success_msg}}
    <div class="alert alert-success">
        {{ success_msg }}
    </div>
{{/if}}

{{#if errors }}
    {{#each errors }}
        <p class="alert alert-danger">{{ this.msg }}</p>
    {{/each}}
{{/if}}


<h1 class="text-center pt-5">Login</h1>


<img src="https://raw.githubusercontent.com/RodrigoAnjos2004/Login-dashboard/main/src/components/assets/MicrosoftTeams-image.png" alt="..." class="rounded mx-auto d-block" style="width:130px;height:160px;">
    <h4 class="text-center pt-1">Cryptonita</h4>
    <div id="login">
        {{!-- <h3 class="text-center text-white pt-5">Login form</h3> --}}
        <div class="container ">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form col-12 col-lg-11 login-card mt-5 hv-center " action="/login" method="post">
                            {{!-- <h3 class="text-center ">Login</h3> --}}
                            <div class="form-group">
                            <div>
                                 <label for="username">Usu√°rio (e-mail):</label>                                
                                 <i class="fa fa-user" aria-hidden="true"></i>
                                <input type="text" class="form-control" id="email" name="email"
                                 placeholder="email" >
                                                      
                            </div>
                            <div class="form-group">
                                 <label for="password">Senha:</label>
                                  <i class="fa fa-lock" aria-hidden="true"></i>
                                 <input type="password" class="form-control" id="password" name="password"
                                 placeholder="senha">
                            </div>
                            <div id="register-link" class="text-right">
                                <a href="/registration" class="text-info">Registrar</a>
                            </div>
                            <div class="form-group">
  
                                <input type="submit" name="submit" class="btn btn-success btn-md" value="Conectar">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
